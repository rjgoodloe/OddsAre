<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/sign_in_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/b_sign_in_facebook"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="388dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/b_sign_up_email"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="@string/sign_up_with_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/b_sign_up_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="109dp" android:layout_marginStart="109dp" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="109dp" android:layout_marginRight="109dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/b_sign_in_facebook"/>
</androidx.constraintlayout.widget.ConstraintLayout>